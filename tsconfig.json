{
  "compilerOptions": {
    "module": "esnext",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "inlineSourceMap": true,
    "sourceMap": false,
    "allowJs": true,
    "lib": [
      "dom",
      "es2015",
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "app/*": ["./app/web/src/*"]
    }
  },
  "include": [
    "app/web/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "app/web/src/**/*.spec.ts"
  ]
}